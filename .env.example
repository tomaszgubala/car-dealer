# Database
DATABASE_URL="postgresql://user:password@localhost:5432/car_dealer"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-min-32-chars-change-in-prod"

# Redis (optional - disable caching by leaving empty)
REDIS_URL="redis://localhost:6379"

# Email (Resend)
RESEND_API_KEY="re_xxx"
EMAIL_FROM="noreply@yourdomain.pl"
DEALER_EMAIL="kontakt@yourdomain.pl"

# S3-compatible storage (optional)
S3_ENDPOINT="https://s3.amazonaws.com"
S3_BUCKET="car-dealer-media"
S3_ACCESS_KEY="xxx"
S3_SECRET_KEY="xxx"
S3_REGION="eu-central-1"

# Import security
IMPORT_SECRET_TOKEN="your-import-token-here"

# Feature flags
ENABLE_REDIS="true"
ENABLE_UPLOAD="false"

# Analytics
NEXT_PUBLIC_GA4_ID=""
NEXT_PUBLIC_MATOMO_URL=""
NEXT_PUBLIC_MATOMO_SITE_ID=""
