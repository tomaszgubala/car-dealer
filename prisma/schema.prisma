// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Auth ───────────────────────────────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  role          Role      @default(EDITOR)
  active        Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts  Account[]
  sessions  Session[]
  auditLogs AuditLog[]

  @@map("users")
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ─── Vehicles / Listings ─────────────────────────────────────────────────────

model Vehicle {
  id             String       @id @default(cuid())
  slug           String       @unique
  source         String       @default("manual")
  sourceExternalId String?
  type           VehicleType  @default(USED)
  status         VehicleStatus @default(ACTIVE)

  // Identity
  make           String
  model          String
  trim           String?
  year           Int
  vin            String?
  regNumber      String?

  // Specs
  mileage        Int?
  fuel           String?
  gearbox        String?
  bodyType       String?
  drive          String?
  powerHP        Int?
  engineCC       Int?
  color          String?
  doors          Int?
  seats          Int?

  // Pricing
  priceGross     Float
  currency       String       @default("PLN")
  installmentAmount Float?
  installmentTermMonths Int?
  installmentDownPayment Float?
  installmentBalloon Float?

  // Location
  location       String?
  branch         String?

  // Content
  descriptionPL  String?      @db.Text
  descriptionEN  String?      @db.Text
  hasEN          Boolean      @default(false)
  features       String[]
  equipment      Json?

  // Media
  images         String[]
  videos         String[]

  // Meta
  promoted       Boolean      @default(false)
  promotedUntil  DateTime?
  publishedAt    DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  events         Event[]
  leads          Lead[]
  auditLogs      AuditLog[]

  @@index([type, status])
  @@index([make, model])
  @@index([source, sourceExternalId])
  @@index([promoted])
  @@index([publishedAt])
  @@map("vehicles")
}

enum VehicleType {
  NEW
  USED
}

enum VehicleStatus {
  ACTIVE
  INACTIVE
  RESERVED
  SOLD
}

// ─── Leads / Forms ────────────────────────────────────────────────────────────

model Lead {
  id          String   @id @default(cuid())
  vehicleId   String?
  type        String   // inquiry / test_drive / call_click / email_click
  name        String
  email       String
  phone       String?
  message     String?  @db.Text
  ipHash      String?
  userAgent   String?
  createdAt   DateTime @default(now())
  read        Boolean  @default(false)

  vehicle     Vehicle? @relation(fields: [vehicleId], references: [id], onDelete: SetNull)

  @@map("leads")
}

// ─── Stats / Events ───────────────────────────────────────────────────────────

model Event {
  id        String   @id @default(cuid())
  type      EventType
  vehicleId String?
  ipHash    String?
  userAgent String?
  referer   String?
  country   String?
  createdAt DateTime @default(now())

  vehicle   Vehicle? @relation(fields: [vehicleId], references: [id], onDelete: SetNull)

  @@index([type, createdAt])
  @@index([vehicleId, type])
  @@map("events")
}

enum EventType {
  PAGE_VIEW
  LISTING_VIEW
  VEHICLE_VIEW
  CTA_CALL
  CTA_EMAIL
  CTA_FORM
  SHARE
}

// ─── Import Jobs ──────────────────────────────────────────────────────────────

model ImportJob {
  id          String      @id @default(cuid())
  connector   String
  status      ImportStatus @default(PENDING)
  startedAt   DateTime?
  finishedAt  DateTime?
  newCount    Int         @default(0)
  updatedCount Int        @default(0)
  errorCount  Int         @default(0)
  errors      Json?
  createdAt   DateTime    @default(now())

  @@index([connector, createdAt])
  @@map("import_jobs")
}

enum ImportStatus {
  PENDING
  RUNNING
  SUCCESS
  FAILED
}

// ─── Audit Log ────────────────────────────────────────────────────────────────

model AuditLog {
  id         String   @id @default(cuid())
  userId     String?
  vehicleId  String?
  action     String
  meta       Json?
  createdAt  DateTime @default(now())

  user       User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  vehicle    Vehicle? @relation(fields: [vehicleId], references: [id], onDelete: SetNull)

  @@map("audit_logs")
}
